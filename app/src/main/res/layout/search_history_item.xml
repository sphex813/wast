<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="clickListener"
            type="com.example.wast.search.HistoryClickListener" />

        <variable
            name="historyItem"
            type="String" />

        <variable
            name="position"
            type="Integer" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="2dp"
        android:layout_marginRight="2dp"
        android:background="@color/background"
        android:clickable="true"
        android:padding="8dp"
        android:foreground="?android:attr/selectableItemBackground">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:text="@{historyItem}"
            android:textSize="24dp"
            android:onClick="@{() -> clickListener.onHistoryClick(historyItem)}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/close"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="dva a pol chlapa" />

        <ImageView
            android:id="@+id/close"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:src="@drawable/ic_plus"
            android:rotation="45"
            android:onClick="@{() -> clickListener.onDeleteHistoryClick(position)}"
            app:layout_constraintDimensionRatio="1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        </ImageView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>